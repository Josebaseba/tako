button, .button
  text-indent 0
  border 0
  display inline-block
  font-weight bold
  font-style normal
  line-height 2.50em
  text-decoration none
  text-align center
  padding-left 1em
  padding-right 1em

  &.smallest
    line-height 2em
    padding 0 .6em

  &.small
    line-height 2.25em

  &.big
    line-height 2.75em

  &.biggest
    line-height 3em

  &.icon:before, & .icon
    font-size 1.5em

  &.icon
    &:before
      margin-right .5em
    &:empty:before
      margin-right 0

  & span:nth-child(2)
    margin-left .5em

header
  & button, &.button
    text-indent 0
    display inline-block
    font-weight bold
    font-style normal
    text-decoration none
    text-align center
    background-color rgba(0, 0, 0, 0)
    height HEADER_HEIGHT - 4
    margin-top 2px
    margin-bottom 2px
    line-height HEADER_HEIGHT - 4
    font-size 1.6em!important
    padding-top 6px
    padding-left 0.6em!important
    padding-right 0.6em!important

    &.icon:before
      font-size 1em!important

    & .counter
      position relative
      top -0.55em
      margin-left 0.5em
      margin-right 0.5em
      line-height 15px
      -webkit-border-radius 2px
      -moz-border-radius 2px
      border-radius 4px
      padding 0.1em 0.2em 0.1em 0.2em
      font-size FONT_SIZE_SMALLEST

    &>span.icon
      margin-right .4em
      font-size 1em!important

  & button.button
    text-indent 0
    border-radius(5px)
    display inline-block
    font-weight bold
    font-style normal
    line-height 35px
    text-decoration none
    text-align center
    box-shadow 1px 1px rgba(255, 255, 255, .25)

    & .counter
      margin-left 0.05em
      margin-right 0.05em

footer

  & .icon:before
    font-size 1.4em

  & button
    height inherit
    width 100%
    background-image none
    background-color rgba(0, 0, 0, 0)

    & .counter
      position relative
      top - INDENT * 1.5
      line-height 15px
      -webkit-border-radius 4px
      -moz-border-radius 4px
      border-radius 4px
      padding .2em .5em .2em .5em
      font-size FONT_SIZE_SMALL