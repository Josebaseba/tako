input
  outline none
  -webkit-user-select text
  -khtml-user-select text
  -moz-user-select text
  -ms-user-select text
  user-select text

  &[type="radio"], &[type="checkbox"]
    &:not(.switch)
      &.circle, &.square
        -webkit-appearance none
        cursor pointer
        border-width 1px
        border-style solid
        width 20px
        height 20px

      &.circle
        border-radius(10px)

      &.square
        border-radius(1px)

    &.switch
      border-width 1px
      border-style solid
      appearance none
      -webkit-appearance none
      -webkit-user-select text
      cursor pointer
      height 24px
      width 44px
      position relative
      transition-duration .25s

      &:after
        content ''
        display block
        height 22px
        width 22px
        transition-duration .25s
        position absolute
        top -1px
        left -1px

      &:checked
        transition-duration .25s

        &:after
          transform(translateX(20px))
          transition-duration .25s

      &.circle
        border-radius(20px)

        &:after
          border-radius(26px)

