input
  outline none
  -webkit-user-select text
  -khtml-user-select text
  -moz-user-select text
  -ms-user-select text
  user-select text

.circle, .square

  & input
    -webkit-appearance none
    cursor pointer
    border-width 3px
    border-style solid
    width 20px
    height 20px
    box-shadow inset 0px 2px 3px 0px rgba(0, 0, 0, .1), 0px 1px 0px 0px rgba(255, 255, 255, .8)

.circle input
  border-radius 50%

.square input
  border-radius 1px
