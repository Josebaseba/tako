article ul
  list-style none
  width 100%
  padding 0
  margin-left 0
  margin-right 0


  & > li
    position relative
    background-color white
    border-bottom 1px solid rgba(0, 0, 0, 0.1)
    padding 11px 60px 11px 10px

    &.separator
      background-color rgba(0, 0, 0, 0.1)
      color white
      padding 1px 60px 1px 10px


    &:first-child
      border-top 1px solid rgba(0, 0, 0, 0.1)

