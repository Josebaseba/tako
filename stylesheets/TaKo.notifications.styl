div[data-element="notification"]
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  display none
  background-color rgba(0,0,0,0.6)
  z-index NOTIFICATION_INDEX
  padding-left NOTIFICATION_INDENT
  padding-right NOTIFICATION_INDENT
  padding-top NOTIFICATION_INDENT*2

  -webkit-box-align start
  -ms-box-align start
  -moz-box-align start
  box-align start

  -webkit-box-pack center
  -ms-box-pack center
  -moz-box-pack center
  box-pack center

  &.show
    display -webkit-box
    display -ms-box
    display -moz-box
    display box


  & > div.window
    margin-top 200%
    text-align center
    color rgba(0, 0, 0, 0.8)
    padding INDENT
    -webkit-box-flex 1
    -moz-ms-flex 1
    -moz-box-flex 1
    box-flex 1
    opacity 0

    -webkit-transition-duration NOTIFICATION_TRANSITION_TIME
    -moz-transition-duration NOTIFICATION_TRANSITION_TIME
    -ms-transition-duration NOTIFICATION_TRANSITION_TIME
    -o-transition-duration NOTIFICATION_TRANSITION_TIME
    transition-duration NOTIFICATION_TRANSITION_TIME

    -webkit-transition-timing-function cubic-bezier(.645,.045,.355,1)
    -moz-transition-timing-function cubic-bezier(.645,.045,.355,1)
    -ms-transition-timing-function cubic-bezier(.645,.045,.355,1)
    -o-transition-timing-function cubic-bezier(.645,.045,.355,1)
    transition-timing-function cubic-bezier(.645,.045,.355,1)

    &.show
      margin-top 0%
      opacity 1

    & > *
      display block
      text-align center
      width 100%

    & > .title
      padding-bottom 0.5em
      border-bottom 2px solid rgba(0, 0, 0, 0.2)

    & > .content
      padding-top 0.5em