NOTIFICATION_WHITE = #f7ecf8
NOTIFICATION_TEXT = black

div[data-element="notification"]
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  display none
  background-color rgba(0,0,0,0.6)
  z-index NOTIFICATION_INDEX
  padding-top 0

  &.show
    display block

  & > div
    margin 0
    padding 0
    width 100%
    height 100%

    display -webkit-box
    display -ms-box
    display -moz-box
    display -o-box
    display box

    box-orient vertical
    box-direction normal
    box-pack center
    box-align center

  & > div > section.window
    display block
    margin-left auto
    margin-right auto
    max-width 350px
    width 90%
    opacity 0
    height auto
    padding 0
    transition-duration NOTIFICATION_TRANSITION_TIME
    background-color NOTIFICATION_WHITE

    & > header
      position static

    & > footer
      position relative
      width  100%
      left 0
      bottom 0
      display block
      height 55px

      & > button
        height 55px

    &:after
      display block
      content ""
      clear both

    &.top_position
      margin-top NOTIFICATION_TRANSITION + HEADER_HEIGHT

      &.margin
        margin-top NOTIFICATION_TRANSITION + HEADER_HEIGHT * 2

      &.no_margin
        margin-top NOTIFICATION_TRANSITION

    &.upwards
      transform(translate(0, NOTIFICATION_TRANSITION))
      &.show
        transform(translate(0,0))

    &.downwards
      transform(translate(0, - NOTIFICATION_TRANSITION))
      &.show
        transform(translate(0,0))


    &.left
      & *
        display block
        text-align left

      & > *
        display block

    &:not(.center)
      box-flex 0

    &.center
      text-align center
      box-flex 0
      position relative
      top -10%

    & .icon
      display block
      text-align center
      height 100%
      width 80px
      font-size 3em

    &:not(.progress) .icon
      line-height 80px

    &.confirm

      & > article
        display -webkit-box
        display -ms-box
        display -moz-box
        display -o-box
        display box

        box-orient horizontal
        box-direction normal
        box-pack center
        box-align center

        position static
        height 125px
        width 100%
        color NOTIFICATION_TEXT

        & .title
          font-weight bold

        & .icon
          display block
          height 70px
          line-height 70px
          width 70px
          font-size 3.5em
          box-flex 0
          margin-right 10px

          & + div
            display block
            box-flex 0
            text-align left

      & .accept
        float left
        width 50%

      & .cancel
        float right
        width 50%

    &.show
      opacity 1

    & > header, & > article
      position static
      background-color NOTIFICATION_WHITE

    &.success, &.error
      min-width 280px

      & > header
        text-align center
        color NOTIFICATION_WHITE!important
        height 100px!important
        max-height 100px!important
        line-height 100px!important

        & > span.icon
          text-align center
          width 100%
          color NOTIFICATION_WHITE!important
          height 100px
          line-height 100px

          &:before
            height 100px
            line-height 100px

      & > article
        display block
        position static
        height 125px
        padding-top 10px
        color NOTIFICATION_TEXT

        & > .title
          font-weight bold

        & > span
          display block
          width 100%
          text-align center

      & .title
        padding-top 0.3em


    & .title
      line-height 40px
      font-size FONT_SIZE_BIG

    & .content
      padding-top 0.5em

    &.loading, &.progress
      min-width 250px

      & > header
        font-weight bold
        font-size 1.3em

        & > .icon
          font-size 2em
          display inline-block
          height 50px
          width 50px
          line-height 49px
          margin-left 10px
          margin-right 10px

          & + span
            position relative
            top -6px
        & span:nth-child(1)
          &:not(.icon)
            display inline-block
            width 100%
            text-align center

      & > article
        display block
        height 100px
        line-height 100px
        width 100%
        text-align center
        overflow hidden

        & .icon
          font-size 5em
          display block
          width 100px
          height 100px
          line-height 100px
          text-align center
          margin-top .15em
          margin-left auto
          margin-right auto

        & #notification_progress
          height 10px
          position relative
          bottom 15px
          width 90%
          margin-left auto
          margin-right auto

    &.loading
      & > header
        text-align center!important

      & > article
        padding-bottom 1.5em

      &.squared
        min-width 100px
        width 100px!important
        height 100px!important
        max-height 97px!important
        background none

        & > article
          overflow hidden
          width 100px!important
          height 100px!important
          max-height 100px!important
          background none

        & .icon
          margin-top 0
          font-size 5em
          width 100px
          height 100px
          line-height 97px
          margin-left auto
          margin-right auto

      & > article
        & .icon
          line-height 96px
    &.progress
      & > article
        height 150px

    &.custom
      & > header
        text-align center
        width 100%

      & > article
        width 100%
        position static
        display block
        padding 10px
        box-sizing border-box

        & .close
          position relative
          top -10px
          right -10px

      & .close
        position absolute
        top 0
        right 0
        float right
        width 50px
        height 50px
        line-height 50px
        text-align center
        display inline-block
        font-size 1.7em
        font-weight bolder

        height 50px
        width 50px
        line-height 50px
        color NOTIFICATION_WHITE
        z-index 410

        & + h1 > span
          text-align center
          padding-right 55px
          padding-left 55px

        & + article
          display block
          position relative
          top 30px