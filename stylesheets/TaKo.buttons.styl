button
  text-indent 0
  border 0
  display inline-block
  font-weight bold
  font-style normal
  line-height 40px
  text-decoration none
  text-align center

header
  & button
    text-indent 0
    display inline-block
    font-weight bold
    font-style normal
    height 100%
    text-decoration none
    text-align center

    & .counter
      position relative
      top -0.55em
      margin-left 0.5em
      margin-right 0.5em
      line-height 15px
      -webkit-border-radius 2px
      -moz-border-radius 2px
      border-radius 4px
      padding 0.1em 0.2em 0.1em 0.2em
      font-size FONT_SIZE_TINY

  & button.button
    text-indent 0
    border-radius(5px)
    display inline-block
    font-weight bold
    font-style normal
    line-height 35px
    text-decoration none
    text-align center
    box-shadow 1px 1px rgba(255, 255, 255, .25)

    & .counter
      margin-left 0.05em
      margin-right 0.05em

footer div button
  width 100%
  height inherit

  & .counter
    position relative
    top - INDENT * 1.5
    margin-left INDENT
    margin-right INDENT
    line-height 15px
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px
    padding .2em .5em .2em .5em
    font-size FONT_SIZE_SMALL