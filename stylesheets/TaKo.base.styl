body
  width 100%
  height 100%
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

aside
  display block
  width ASIDE_WIDTH
  padding ASIDE_PADDING
  z-index ASIDE_INDEX
  position fixed
  top 50px
  bottom 0
  left - ASIDE_TRANSITION
  transition-duration ASIDE_TRANSITION_TIME

  &.show
    transform(translateX(0))
    left 0

  & .counter
    margin-top -3px
    -webkit-border-radius 2px
    -moz-border-radius 2px
    border-radius 2px
    padding .2em .4em .2em .4em
    float right

div[data-element="aside_background"]
  position fixed
  top HEADER_HEIGHT
  bottom 0
  left 0
  right 0
  transition(opacity ASIDE_TRANSITION_TIME ease-out)
  z-index 0
  opacity 0

  &.show
    background-color black
    opacity 0.6
    z-index ASIDE_BCK_INDEX

.indented > div
  padding INDENT

.anchor
  width 100%

.smallest
  font-size FONT_SIZE_SMALLEST

.small
  font-size FONT_SIZE_SMALL

.big
  font-size FONT_SIZE_BIG

.biggest
  font-size FONT_SIZE_BIGGEST

.onleft
  float left

.onright
  float right

.padding.top
  padding-top INDENT!important

.padding.bottom
  padding-bottom INDENT!important

.padding.left
  padding-left INDENT!important

.padding.right
  padding-right INDENT!important

.margin.top
  margin-top INDENT!important

.margin.bottom
  margin-bottom INDENT!important

.margin.left
  margin-left INDENT!important

.margin.right
  margin-right INDENT!important

.scroll

  &.vertical
    overflow-y scroll

  &.horizontal
    overflow-x scroll

.progress_bar
  width 100%
  height 10px
  display block

  & .percent
    height inherit
    display block
    transition-duration PROGRESSBAR_TRANSITION_TIME

.clear:after
  display block
  content ""
  clear both
