body
  width 100%
  height 100%
  background-color black
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

aside
  display block
  width ASIDE_WIDTH
  padding ASIDE_PADDING
  z-index ASIDE_INDEX
  position fixed
  top 50px
  bottom 0
  left - ASIDE_TRANSITION
  transition(all ASIDE_TRANSITION_TIME ease)

  &.show
    transform(translate(ASIDE_TRANSITION))

div[data-element="aside_background"]
  position fixed
  top HEADER_HEIGHT
  bottom 0
  left 0
  right 0
  transition(opacity ASIDE_TRANSITION_TIME ease-out)
  z-index 0
  opacity 0

  &.show
    background-color black
    opacity 0.6
    z-index ASIDE_BCK_INDEX

.indented > div
  padding INDENT

.anchor
  width 100%

