body
  width 100%
  height 100%
  background-color black
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

section
  height inherit
  width inherit
  display none
  position fixed
  z-index 100
  top 0
  left 0

  &.active
    display block

header
  position fixed
  top 0
  left 0
  height HEADER_HEIGHT
  width 100%
  text-align center

  & > h1
    font-weight bold
    display inline-block
    position absolute
    left 4em
    right 4em

  & > nav

    &.right
      margin-right 5px
      float: right

    &.left
      margin-left 5px
      float: left

    & > button.button
      margin-top 5px
      text-indent 0
      border 1px solid #808184
      border-radius(5px)
      display inline-block
      font-weight bold
      font-style normal
      line-height 30px
      text-decoration none
      text-align center
      box-shadow 1px 1px rgba(255, 255, 255, .25)

footer
  position fixed
  bottom 0
  left 0
  width 100%
  height FOOTER_HEIGHT

article
  position fixed
  top HEADER_HEIGHT
  left 0
  height inherit
  width 100%
  display none

  &.active
    display block

aside
  display block
  width ASIDE_WIDTH
  padding ASIDE_PADDING
  z-index 110
  position fixed
  top 50px
  bottom 0
  left - ASIDE_TRANSITION
  transition(all ASIDE_TRANSITION_TIME linear)

  &.show
    transform(translate(ASIDE_TRANSITION))

#background
  position fixed
  top HEADER_HEIGHT
  bottom 0
  left 0
  right 0
  transition(opacity 1s ease-out)
  z-index 0

  &.show
    background-color rgba(0,0,0,0.6)
    z-index 109


