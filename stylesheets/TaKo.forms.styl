input
  outline none
  -webkit-user-select text
  -khtml-user-select text
  -moz-user-select text
  -ms-user-select text
  user-select text

  &[type="radio"], &[type="checkbox"]
    &:not(.switch)
      &.circle, &.square
        -webkit-appearance none
        -moz-appearance none
        appearance none
        cursor pointer
        border-width 1px
        border-style solid
        width 20px
        height 20px

      &.circle
        border-radius 10px

      &.square
        border-radius 1px

    &.switch
      border-width 1px
      border-style solid
      appearance none
      -webkit-appearance none
      -moz-appearance none
      appearance none
      cursor pointer
      height 24px
      width 44px
      position relative
      transition-duration .25s

      &:after
        content ''
        display block
        height 22px
        width 22px
        transition-duration .25s
        position absolute
        top -1px
        left -1px

      &:checked
        transition-duration .25s

        &:after
          transform(translateX(20px))
          transition-duration .25s

      &.circle
        border-radius 20px

        &:after
          border-radius 26px

  &[type="range"]
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    -webkit-appearance none
    width 100%
    height 7px
    margin-top 10px
    margin-bottom 10px
    border-radius 3.5px
    border-width 1px
    border-style solid
    margin-left 0

    &::-moz-range-track
      width 100%
      height 7px
      margin-top 10px
      margin-bottom 10px
      border-radius 3.5px
      border-width 1px
      border-style solid

    &::-webkit-slider-thumb
      -webkit-appearance none
      height 26px
      width 26px
      border-radius 50%

    &::-moz-range-thumb
      height 26px
      width 26px
      border-radius 50%

  &[type="text"], &[type="password"], &[type="date"], &[type="datetime"], &[type="email"], &[type="number"], &[type="search"], &[type="tel"], &[type="time"], &[type="url"], select, textarea, label
    -webkit-appearance none
    -moz-appearance none
    appearance none
    display inline-block
    box-sizing border-box
    width 100%
    padding 5px
    font-size FONT_SIZE_BIG
    box-shadow(none)
    border-style solid
    border-width 0.15em

    &.no_border
      border none

    &.no_background
      background-color rgba(0,0,0,0)

    &.line
      border none


