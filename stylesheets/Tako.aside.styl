aside
  display block
  width ASIDE_WIDTH
  padding ASIDE_PADDING
  top 0
  bottom 0
  left - ASIDE_TRANSITION
  position absolute
  z-index ASIDE_INDEX
  transition-duration ASIDE_TRANSITION_TIME

  & .counter
    margin-top -3px
    -webkit-border-radius 2px
    -moz-border-radius 2px
    border-radius 2px
    padding .2em .4em .2em .4em
    float right

  &.show
    transform(translateX(ASIDE_WIDTH + 8 + ASIDE_PADDING * 2))

  &.show
    z-index ASIDE_INDEX!important

div[data-element="aside_background"]
  position fixed
  top HEADER_HEIGHT
  left 0
  width 100%
  height 100%
  z-index 0
  background-color rgba(0, 0, 0, 0)
  transition(background-color ASIDE_TRANSITION_TIME linear)

  &.full
    background-color rgba(0, 0, 0, 0)!important
    top 0

  &.show
    background-color rgba(0, 0, 0, .6)
    z-index ASIDE_BCK_INDEX

  &.hide
    background-color rgba(0, 0, 0, 0)

// @media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : landscape)
@media screen and (min-width : 768px)
  body
    display -webkit-box
    display -ms-box
    display -o-box
    display -moz-box
    display box

  div[data-element="aside_background"]
    display block
    width ASIDE_WIDTH
    z-index ASIDE_BCK_INDEX
    height 100%
    left 0
  aside
    box-flex 0
    height 100%
    left 0
    z-index FULL_ASIDE_INDEX
    position absolute

  section
    // left ASIDE_WIDTH + ASIDE_PADDING * 2!important
    box-flex 1