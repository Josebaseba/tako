body
  padding 0
  margin 0
  width 100%
  height 100%
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  oveflow hidden

  -webkit-backface-visibility hidden

  & *
    -webkit-tap-highlight-color rgba(0,0,0,0)

aside
  display block
  width ASIDE_WIDTH
  padding ASIDE_PADDING
  z-index ASIDE_INDEX
  position absolute
  top 0
  bottom 0
  left - ASIDE_TRANSITION
  transition-duration ASIDE_TRANSITION_TIME

  &.show
    transform(translateX(ASIDE_WIDTH + ASIDE_PADDING * 2))

  & .counter
    margin-top -3px
    -webkit-border-radius 2px
    -moz-border-radius 2px
    border-radius 2px
    padding .2em .4em .2em .4em
    float right

div[data-element="aside_background"]
  position fixed
  top HEADER_HEIGHT
  bottom 0
  left 0
  right 0
  transition(background-color ASIDE_TRANSITION_TIME ease-out)
  z-index 0
  background-color rgba(0, 0, 0, 0)

  &.show
    background-color rgba(0, 0, 0, .6)
    z-index ASIDE_BCK_INDEX

  &.hide
    background-color rgba(0, 0, 0, 0)

.indented > div
  padding INDENT

.anchor
  width 100%

.smallest
  font-size FONT_SIZE_SMALLEST

.small
  font-size FONT_SIZE_SMALL

.big
  font-size FONT_SIZE_BIG

.biggest
  font-size FONT_SIZE_BIGGEST

.onleft
  float left

.onright
  float right

.clear:after
  display block
  content ""
  clear both

.middle
  vertical-align middle

.block
  display block!important

.inline
  display inline!important

.inline-block
  display inline-block!important

.padding.top
  padding-top INDENT!important

.padding.bottom
  padding-bottom INDENT!important

.padding.left
  padding-left INDENT!important

.padding.right
  padding-right INDENT!important

.margin.top
  margin-top INDENT!important

.margin.bottom
  margin-bottom INDENT!important

.margin.left
  margin-left INDENT!important

.margin.right
  margin-right INDENT!important

.max-height
  height 100%

.max-line-height
  line-height 100%

.align-left
  text-align left

.align-center
  text-align center

.align-right
  text-align right

.align-justify
  text-align justify

.scroll

  &.vertical
    overflow-y scroll

  &.horizontal
    overflow-x scroll

.progress_bar
  width 100%
  height 10px
  display block

  & .percent
    height inherit
    display block
    transition-duration PROGRESSBAR_TRANSITION_TIME

.clear:after
  display block
  content ""
  clear both

strong
  font-weight bold
  font-size 1.1em

small
  opacity 0.6
  font-size 1.1em
