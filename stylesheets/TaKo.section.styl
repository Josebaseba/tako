section
  height 100%
  width 100%
  position absolute
  margin 0
  padding 0
  z-index 0
  top 0
  left 0
  bottom 0
  opacity 0

  transition-duration SECTION_TRANSITION_TIME

  &.active
    opacity 1
    z-index SECTION_INDEX

  &:not(.active) > article
    display none

  &.footer > article
    padding-bottom FOOTER_HEIGHT

  &.no_header > article
    top 0

  &.extended_header > article
    top HEADER_HEIGHT * 2

header
  position fixed
  top 0
  left 0
  right 0
  height HEADER_HEIGHT
  line-height HEADER_HEIGHT
  width 100%
  z-index HEADER_INDEX

  & .icon
    font-size 1.5em

  & > h1
    font-weight bold
    display inline-block
    position absolute
    text-align center
    width 100%
    left 0
    margin-top 0
    z-index HEADER_H1_INDEX

  & > nav

    &.right
      position fixed
      z-index HEADER_NAV_INDEX
      right 0

      & > button
        margin-right 5px

    &.left
      position fixed
      z-index HEADER_NAV_INDEX
      left 0

      & > button
        margin-left 5px

    &:not(.right)
      &:not(.left)
        font-size 1.2em
        width 100%
        margin HEADER_HEIGHT 0 0 0
        height HEADER_HEIGHT
        line-height HEADER_HEIGHT
        padding 0
        display -webkit-box
        display -ms-box
        display -moz-box
        display -o-box
        display box
        box-orient horizontal
        box-direction normal
        box-pack justify
        box-align stretch

        & > *
          box-flex 1
          text-align center
          width 100%
          display block
          height HEADER_HEIGHT



footer
  position fixed
  bottom 0
  left 0
  right 0
  margin 0 0 -2px 0
  width 100%
  height FOOTER_HEIGHT
  line-height FOOTER_HEIGHT
  z-index FOOTER_INDEX

  display -webkit-box
  display -ms-box
  display -moz-box
  display -o-box
  display box

  box-orient horizontal
  box-direction normal
  box-pack justify
  box-align stretch

  & nav
    margin 0
    box-flex 1
    height FOOTER_HEIGHT
    line-height FOOTER_HEIGHT
    padding 0
    display -webkit-box
    display -ms-box
    display -moz-box
    display -o-box
    display box
    width 100%

    box-orient horizontal
    box-direction normal
    box-pack justify
    box-align stretch

    & > *
      box-flex 1
      text-align center
      width 100%
      display block
      height FOOTER_HEIGHT

      & > *
        line-height FOOTER_HEIGHT
        height FOOTER_HEIGHT

      &.active
        background-color rgba(250,250,250,0.15)

article
  min-width 100%
  width auto
  display none
  padding-top 5px
  margin 0
  position absolute
  top HEADER_HEIGHT
  overflow visible
  z-index ARTICLE_INDEX

  &.active
    display block

