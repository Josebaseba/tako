CONTENT_HEIGHT = PULL_HEIGHT - ( PULL_PADDING * 2)
ICON_RADIUS    = CONTENT_HEIGHT /2 + PULL_BORDER
INITIAL_POS    = PULL_HEIGHT + 12

div.pulltorefresh
  height PULL_HEIGHT
  width 100%
  line-height PULL_HEIGHT
  border-top 1px solid rgba(0, 0, 0, 0.1)
  border-bottom 1px solid rgba(0, 0, 0, 0.6)
  padding PULL_PADDING
  text-align center
  transform(translate(0,- INITIAL_POS))
  margin-bottom - INITIAL_POS

  & span
    height CONTENT_HEIGHT
    line-height CONTENT_HEIGHT
    display inline-block

    &.text
      font-size 1.5em

    &.icon
      width CONTENT_HEIGHT
      border-radius ICON_RADIUS
      border PULL_BORDER solid rgba(0, 0, 0, 0.8)
      text-align center
      padding 0
      margin-right 1em
      font-size 2em