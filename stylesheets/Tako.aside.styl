aside
  display block
  width ASIDE_WIDTH
  padding ASIDE_PADDING
  top 0
  bottom 0

  & .counter
    margin-top -3px
    -webkit-border-radius 2px
    -moz-border-radius 2px
    border-radius 2px
    padding .2em .4em .2em .4em
    float right

  &:not(.full)
    left - ASIDE_TRANSITION
    position absolute
    z-index ASIDE_INDEX
    transition-duration ASIDE_TRANSITION_TIME

    &.show
      transform(translateX(ASIDE_WIDTH + 8 + ASIDE_PADDING * 2))

  &.show
    z-index ASIDE_INDEX!important

  &.full
    height 100%
    left 0
    z-index FULL_ASIDE_INDEX
    position fixed

aside.full.show+ div +section.active
  transform(translateX(ASIDE_WIDTH + ASIDE_PADDING * 2))

div[data-element="aside_background"]
  position fixed
  top HEADER_HEIGHT
  left 0
  width 100%
  height 100%
  transition(background-color ASIDE_TRANSITION_TIME linear)
  z-index 0
  background-color rgba(0, 0, 0, 0)

  &.show
    background-color rgba(0, 0, 0, .6)
    z-index ASIDE_BCK_INDEX

  &.hide
    background-color rgba(0, 0, 0, 0)

div[data-element="aside_background"].full
  background-color rgba(0, 0, 0, 0)!important
  left ASIDE_WIDTH + ASIDE_PADDING * 2
  top 0