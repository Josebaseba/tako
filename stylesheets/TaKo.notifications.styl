div[data-element="notification"]
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  display none
  background-color rgba(0,0,0,0.6)
  z-index NOTIFICATION_INDEX
  padding-top 0
  padding-left NOTIFICATION_INDENT
  padding-right NOTIFICATION_INDENT

  &.show
    display block

  & > div.window
    color rgba(0, 0, 0, 0.8)
    padding INDENT
    margin-left auto
    margin-right auto
    opacity 0
    max-width 450px
    width 80%
    transition-duration NOTIFICATION_TRANSITION_TIME

    &:after
      display block
      content ""
      clear both

    &.top_position
      margin-top NOTIFICATION_TRANSITION + HEADER_HEIGHT

      &.downwards
        margin-top - NOTIFICATION_TRANSITION

      &.margin
        margin-top NOTIFICATION_TRANSITION + HEADER_HEIGHT * 2

      &.no_margin
        margin-top NOTIFICATION_TRANSITION

    &.upwards
      &.show
        transform(translate(0,- NOTIFICATION_TRANSITION))

    &.downwards
      &.show
        transform(translate(0, NOTIFICATION_TRANSITION))

    &.left
      & *
        display block
        text-align left

      & > *
        display block

    &.center
      text-align center
      padding 1.8em
      margin-top 50%

    &.confirm
      max-width 800px

      & .accept
        float left
        width 48.5%

      & .cancel
        float right
        width 48.5%

    & .icon
      display block
      text-align center
      height 100%
      width 80px
      font-size 3em
      float left
      margin-right 0.2em

    &:not(.progress) .icon
      line-height 80px

    &.show
      opacity 1

    &.success, &.error
      border-style solid
      border-width 0 0 0 4px

      & .title
        padding-top 0.3em

    &.progress
      width 80%

      & .icon
        width 100%

    & .title
      line-height 40px
      font-size FONT_SIZE_BIG

    & .content
      padding-top 0.5em

    & #circular_container
      width LOADER_SIZE
      margin 0 auto 0 auto