button, .button
  text-indent 0
  border 0
  display inline-block
  font-weight bold
  font-style normal
  line-height 2.50em
  text-decoration none
  text-align center
  padding-left 1em
  padding-right 1em

  &.smallest
    line-height 2em
    padding 0 .6em

  &.small
    line-height 2.25em

  &.big
    line-height 2.75em

  &.biggest
    line-height 3em

  &.icon:before
    font-size 1.2em
    margin-right 0.4em

header
  & button
    text-indent 0
    display inline-block
    font-weight bold
    font-style normal
    height 100%
    text-decoration none
    text-align center
    background-color rgba(0, 0, 0, 0)

    & .counter
      position relative
      top -0.55em
      margin-left 0.5em
      margin-right 0.5em
      line-height 15px
      -webkit-border-radius 2px
      -moz-border-radius 2px
      border-radius 4px
      padding 0.1em 0.2em 0.1em 0.2em
      font-size FONT_SIZE_SMALLEST

  & button.button
    text-indent 0
    border-radius(5px)
    display inline-block
    font-weight bold
    font-style normal
    line-height 35px
    text-decoration none
    text-align center
    box-shadow 1px 1px rgba(255, 255, 255, .25)

    & .counter
      margin-left 0.05em
      margin-right 0.05em

footer

  & .icon:before
    font-size 1.4em

  & button
    height inherit
    width 100%
    background-image none
    background-color rgba(0, 0, 0, 0)

    & .counter
      position relative
      top - INDENT * 1.5
      line-height 15px
      -webkit-border-radius 4px
      -moz-border-radius 4px
      border-radius 4px
      padding .2em .5em .2em .5em
      font-size FONT_SIZE_SMALL